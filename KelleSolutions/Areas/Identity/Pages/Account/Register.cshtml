@page
@model RegisterModel
<img src="~/images/kelleslogo.png">
@{
    ViewData["Title"] = "Not a member yet? Create your Kelle account";
}

<link rel="stylesheet" href="~/css/register.css" />

<p>@ViewData["Title"]</p>

<body>
    <div class="row">
        <div class="col-lg-6 mx-auto border p-3" id="border">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="row mb-3">
                    <div class="col">
                        <div class = "form-floating mb-3" id = "fnametextbox">
                            <input asp-for="Input.FirstName" id ="fname" class="form-control" aria-required="true" placeholder="First Name"/>
                            <label asp-for="Input.FirstName" class="form-label">First Name</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class = "form-floating mb-3" id = "lnametextbox">
                            <input asp-for="Input.LastName" id= "lname" class="form-control" aria-required="true" placeholder="Last Name" />
                            <label asp-for="Input.LastName" class="form-label">Last Name</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class = "form-floating mb-3" id = "affiliationtextbox">
                            <input asp-for="Input.Affiliation" id = "affiliation" class="form-control" aria-required="true" placeholder="Affiliation" />
                            <label asp-for="Input.Affiliation" class="form-label">Affiliation</label>
                            <span asp-validation-for="Input.Affiliation" class="text-danger"></span>
                        </div>
                    </div>
               </div>
               <div class="row mb-3">
                   <div class="col-7">
                        <div class = "form-floating mb-3" id = "emailtextbox">
                            <input asp-for="Input.Email" id = "email" class="form-control" aria-required="true" placeholder="Email" />
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                   </div>
                   <div class="col">
                        <div class = "form-floating mb-3" id = "phonenumtextbox">
                            <input asp-for="Input.PhoneNumber" id = "phonenum" class="form-control" aria-required="true" placeholder="Phone Number" />
                            <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                   </div>
               </div>
                <div class="form-floating mb-3" id = "passtextbox">
                    <input asp-for="Input.Password" id = "pass" class="form-control" aria-required="true" placeholder="Password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3" id = "confirmpasstextbox">
                    <input asp-for="Input.ConfirmPassword" id = "confirmpass" class="form-control" aria-required="true" placeholder="Confirm Password" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class= "checkbox-container">
                    <input type ="checkbox" id="cbpolicy" data-val="true" data-val-required= "Please Agree with our Terms and policies"/>
                    <label for="cbpolicy" id="policies">By creating an account, you agree to our Privacy Policy and Terms of Service</label>
                </div>
                <button id="Submit" type="submit">Submit</button>
            </form>
        </div>
        </section>
    </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
