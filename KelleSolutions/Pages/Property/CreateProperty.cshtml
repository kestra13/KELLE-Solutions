@page
@model KelleSolutions.Pages.Properties.CreatePropertyModel
@{
    ViewData["Title"] = "Create New Property";
}

<h2>Create New Property</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Property.Name" class="control-label"></label>
        <input asp-for="Property.Name" class="form-control" />
        <span asp-validation-for="Property.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Location" class="control-label"></label>
        <input asp-for="Property.Location" class="form-control" />
        <span asp-validation-for="Property.Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Price" class="control-label"></label>
        <input asp-for="Property.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Property.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Description" class="control-label"></label>
        <textarea asp-for="Property.Description" class="form-control"></textarea>
        <span asp-validation-for="Property.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Bedrooms" class="control-label"></label>
        <input asp-for="Property.Bedrooms" class="form-control" type="number" />
        <span asp-validation-for="Property.Bedrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.Bathrooms" class="control-label"></label>
        <input asp-for="Property.Bathrooms" class="form-control" type="number" />
        <span asp-validation-for="Property.Bathrooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Property.DateListed" class="control-label"></label>
        <input asp-for="Property.DateListed" class="form-control" type="date" />
        <span asp-validation-for="Property.DateListed" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Property</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
