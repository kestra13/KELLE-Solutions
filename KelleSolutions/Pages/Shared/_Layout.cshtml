@* 
    This is the layout page for Kelle Solutions. It provides the overall structure for the application by defining common HTML elements like the header, navigation bar, and footer, as well as rendering the main content of each page.
    Features:
    - Responsive layout using Bootstrap
    - Navigation links to Home and Privacy pages
    - Dynamic content insertion using Razor's `@RenderBody()` and `@RenderSectionAsync()`
    - Includes a partial view for login/logout functionality
    - Footer with privacy link
    - External resources for Bootstrap and jQuery
*@

@using Microsoft.AspNetCore.Identity
@inject SignInManager<KelleSolutions.Models.User> SignInManager
@inject UserManager<KelleSolutions.Models.User> UserManager
@{
    var currentPath = Context.Request.Path;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kelle Solutions</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KelleSolutions.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Kelle Solutions</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @* Collapsible Sidebar Navbar, only visible when the user is signed in and on specified pages *@
@if (SignInManager.IsSignedIn(User) && (currentPath == "/AT_Dashboard" || currentPath == "/Roles/Roles" || currentPath == "/Listings/Listings"
    || currentPath == "/Listings/ViewListing" || currentPath == "/Properties/ViewProperty"))
{
    <div class="d-flex">
        <button id="sideNavbarToggle" class="btn btn-primary navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sideNavbar" aria-expanded="false" aria-controls="sideNavbar">
            &#9776; <!-- Hamburger icon -->
        </button>

        <div class="collapse" id="sideNavbar">
            <nav class="sidebar-nav flex-column" id="sideNavContent">
                <a class="sidebar-link" href="/AT_Dashboard">Dashboard</a>
                <a class="sidebar-link" href="/Roles/Roles">Roles</a>
                <a class="sidebar-link" href="/Affiliations">Affiliations</a>
                <a class="sidebar-link" href="/Transactions">Transactions</a>
                <a class="sidebar-link" href="/Listings/Listings">Listings</a>
                <a class="sidebar-link" href="/Properties">Properties</a>
                <a class="sidebar-link" href="/People">People</a>
                <a class="sidebar-link" href="/Leads">Leads</a>
            </nav>
        </div>
    </div>
}

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Kelle Solutions - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>