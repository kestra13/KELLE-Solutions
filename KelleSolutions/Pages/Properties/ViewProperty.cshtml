@page
@model KelleSolutions.Pages.Properties.ViewPropertyModel

@{
    ViewData["Title"] = "View Properties";
}

<link rel="stylesheet" href="~/css/listings.css" />

<div class="header-section">
    <h3>Properties</h3>
    <a href="/Properties/CreateProperty" class="add-new-btn">Create Properties</a>
</div>

<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Listings/ViewListing">View Listings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/Properties/ViewProperty">View Properties</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/People/ViewPeople">View People</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Leads/ViewLeads">View Leads</a>
            </li>
        </ul>
    </div>
</nav>

<div class="listings-container">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Created</th>
                <th>County</th>
                <th>City</th>
                <th>Postal</th>
                <th>Street</th>
                <th>Layout</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Properties != null && Model.Properties.Count > 0)
            {
                foreach (var property in Model.Properties)
                {
                    <tr>
                        <td class="text-primary">@property.Id</td>
                        <td>@property.DateListed.ToString("MM/dd/yyyy")</td>
                        <td>@property.County</td>
                        <td>@property.City</td>
                        <td>@property.ZipCode</td>
                        <td>@property.StreetAddress</td>
                        <td>@($"{property.Bedrooms} bed, {property.Bathrooms} bath")</td>
                        <td>
                            <a href="#" class="text-primary">Update</a> |
                            <a href="#" class="text-primary">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" class="text-center">No properties available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
